<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    android:clickable="true"
    android:layout_height="match_parent"
    tools:context="in.co.mealman.mealman.Order_history">
    <ImageView
        android:layout_marginStart="6dp"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbackbutton"
        android:src="@drawable/backico"
        android:layout_gravity="top|start"/>
    <TextView
        android:id="@+id/hnextmeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT MEAL"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/nbrkfastlayout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="40dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nbrkfst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LUNCH"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:gravity="left" />

        <ImageView
            android:id="@+id/nbdec1"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minus_icon"
                android:layout_weight="1"

            />
        <TextView
            android:id="@+id/nbincdec"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="1"
            android:textSize="25sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nbinc1"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:src="@drawable/plus_icon"
             />
    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/lunch_update_button"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="UPDATE"
        android:textSize="20sp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:textColor="#fff"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="center"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/manageweekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MANAGE WEEKLY"
        android:textColor="#000"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"/>
<TextView
    android:id="@+id/mngdate"
    android:textColor="#000"
    android:textSize="15sp"
    android:text="Click here"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"

    />
</LinearLayout>
